@{
    ViewData["Title"] = "Add teacher";
}

@using (Html.BeginForm("AddTeacher", "CountTeacher", FormMethod.Post))
{
<div class="contaner">
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <p>Имя преподователя </p>
            <input type="text" name="Name" value="" />
        </li>
        <li class="nav-item">
            <p>Количество добавленных преподователей </p>
            <input type="text" name="Count" value="" />
        </li>
        <li class="nav-item">

            @if (ViewBag.Message == null)
            {
                <p>Количество преподователей: </p><p id="name" name="name">@ViewBag.name</p>}
        </li>

        <li class="nav-item">
            <input class="btn btn-primary" @*name="calculate"*@ type="submit" value="Проверить">
        </li>

    </ul>
</div>}
